<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Listing #<%= @listing.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Title</dt>
              <dd><%= @listing.title %></dd>

              <dt>Description</dt>
              <dd><%= @listing.description %></dd>

              <dt>Bedrooms</dt>
              <dd><%= @listing.bedrooms %></dd>

              <dt>Bathrooms</dt>
              <dd><%= @listing.bathrooms %></dd>

              <dt>Price</dt>
              <dd><%= @listing.price %></dd>

              <dt>Date available</dt>
              <dd><%= @listing.date_available %></dd>

              <dt>Term</dt>
              <dd><%= @listing.term %></dd>

              <dt>Address</dt>
              <dd><%= @listing.address %></dd>

              <dt>Unit</dt>
              <dd><%= @listing.unit %></dd>

              <dt>City</dt>
              <dd><%= @listing.city %></dd>

              <dt>State</dt>
              <dd><%= @listing.state %></dd>

              <dt>Zip</dt>
              <dd><%= @listing.zip %></dd>

              <dt>Image file1</dt>
              <dd><%= @listing.image_file1 %></dd>

              <dt>Image file2</dt>
              <dd><%= @listing.image_file2 %></dd>

              <dt>Image file3</dt>
              <dd><%= @listing.image_file3 %></dd>

              <dt>Image file4</dt>
              <dd><%= @listing.image_file4 %></dd>

              <dt>Image file5</dt>
              <dd><%= @listing.image_file5 %></dd>

              <dt>Landlord</dt>
              <dd><%= @listing.landlord_id %></dd>

              <dt>Contact email</dt>
              <dd><%= @listing.contact_email %></dd>

              <dt>Status</dt>
              <dd><%= @listing.status %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/listings" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/listings/<%= @listing.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_listing/<%= @listing.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
