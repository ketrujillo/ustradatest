<div class="page-header">
  <h1>
    My Applications
  </h1>
</div>


<hr>


<table class="table table-hover">
<tr>
<% if current_renter.present? %>

  <td>Listing Title </td>
  <td>Price </td>
  <td>BR </td>
  <td>BA </td>
  <td>Status</td>
  <td> </td>
  <td> </td>
  <td> </td>
  <% elsif current_landlord.present? %>
  <td>Listing Title </td>
  <td>First Name </td>
  <td>Last Name </td>
  <td>Email </td>
  <td>Salary </td>
  <td>Date Created </td>
  <td> </td>
  <% else %>

  <% end %>
</tr>

<% @applications.each do |application| %>

<% if current_renter.present? %>

<% if application.renter_id.to_i == current_renter.id.to_i %>

<tr>
  <td><%= application.listing.title %> </td>
  <td><%= application.listing.price %> </td>
  <td><%= application.listing.bedrooms %> </td>
  <td><%= application.listing.bathrooms %> </td>
  <td>
      <% if application.listing.status == 0 %>
      Available
      <% elsif application.listing.status == 1 %>
      Rented
      <% else %>

      <% end %>
  </td>

  <td>
      <a href="/applications/<%= application.id %>" class="btn btn-primary">
        <i class="fa fa-search-plus"></i>
      </a>
  </td>

  <td>
      <a href="/applications/<%= application.id %>/edit" class="btn btn-primary">
        <i class="fa fa-edit"></i>
      </a>
  </td>

  <td>
      <a href="/delete_application/<%= application.id %>" class="btn btn-primary" rel="nofollow">
        <i class="fa fa-trash-o"></i>
      </a>
  </td>


</tr>
<% end %>
<% elsif current_landlord.present? %>

<% if (application.listing.landlord_id.to_i == current_landlord.id.to_i) && (application.listing_id.to_i == @listing_pass_id.to_i) %>

<tr>
  <td><%= application.listing.title %> </td>
  <td><%= application.first_name %> </td>
  <td><%= application.last_name %> </td>
  <td><%= application.email %> </td>
  <td><%= application.employer_salary_0 %> </td>
  <td><%= application.created_at %> </td>
  <td>
      <a href="/applications/<%= application.id %>" class="btn btn-primary">
        <i class="fa fa-search-plus"></i>
      </a>
  </td>
</tr>
<% else %>


<% end %>
<% end %>


      </div>
    </div>
  </div>
<% end %>

</table>

</div>

